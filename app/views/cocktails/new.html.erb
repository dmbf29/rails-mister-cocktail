<h1 class="main-title">Add a New Cocktail</h1>

<%= simple_form_for(@cocktail) do |f| %>
  <%= f.error_notification %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm 6 col-m-3">
      <div class="form-inputs">
        <%= f.input :name %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
      <br>
      <%= link_to 'Back', cocktails_path %>
    </div>
  </div>
</div>
<% end %>
